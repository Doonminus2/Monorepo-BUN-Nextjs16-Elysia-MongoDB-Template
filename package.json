{
  "name": "monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "bun --cwd apps/web dev",
    "dev:api": "bun --cwd apps/api dev",
    "lint": "bunx eslint .",
    "format": "bunx prettier . --write" , 
    "infra:up": "docker compose -f infra/docker/docker-compose.yml up -d",
    "infra:down": "docker compose -f infra/docker/docker-compose.yml down",
    "build:api": "bun --cwd apps/api run build",
    "build:web": "bun --cwd apps/web run build",
    "build": "bun run build:api && bun run build:web"
  }
}
